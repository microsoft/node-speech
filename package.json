{
  "name": "@vscode/node-speech",
  "version": "1.0.6",
  "description": "Native bindings for Micrsooft Speech SDK",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/node-speech"
  },
  "homepage": "https://github.com/Microsoft/node-speech",
  "keywords": [
    "vscode"
  ],
  "license": "MIT",
  "author": {
    "name": "Microsoft Corporation"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/main.js",
  "types": "index.d.ts",
  "scripts": {
    "install": "node preinstall.js",
    "postinstall": "node-gyp rebuild",
    "prepublish": "tsc",
    "prepublishOnly": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./index.js --bundle --outfile=dist/main.js --external:bindings --external:crypto --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --minify --sourcemap",
    "prepare": "npm run test",
    "watch": "tsc -w",
    "test": "jest"
  },
  "devDependencies": {
    "@types/decompress": "^4.2.5",
    "@types/jest": "^29.5.5",
    "@types/node": "18.x",
    "esbuild": "^0.19.5",
    "jest": "^29.7.0",
    "typescript": "^5.2.x"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^7.0.0",
    "yauzl": "^2.10.0"
  },
  "jest": {
    "testMatch": [
      "**/*.test.js"
    ]
  }
}
